{
  "rules": {
    "no-console": 0,
    "indent": [2, 2],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"], 
    "comma-dangle": [1, "always-multiline"],
    "arrow-body-style": [2, "always"],
    "wrap-iife": [2, "inside"],
    "no-unused-vars": [
      2, 
      {
        "vars": "all", 
        "args": "none"
      }
    ],
    "no-use-before-define": [
      2, 
      { "functions": false }
    ],
    "import/no-extraneous-dependencies": [
      2, 
      { 
        "devDependencies": [ 
          "**/*.test.js", 
          "**/backend/development-server.js" 
        ] 
      }
    ],
    "space-before-function-paren": [
      2, 
      {
        "anonymous": "never", 
        "named": "never"
      }
    ],
    "key-spacing": [
      2, 
      {
        "align": "value"
      }
    ]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "ecmaFeatures": {
    "modules": true,
    "experimentalObjectRestSpread": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors"
  ], 
  "parserOptions": {
    "sourceType": "module"
  }
}
